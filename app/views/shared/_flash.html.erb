<% if flash.any? %>
  <% flash.each do |type, msg| %>
    <div class="bg-<%= flash_color(type) %>-50 border-l-4 border-<%= flash_color(type) %>-400 p-4" data-controller="flash" data-flash-target="banner">
      <div class="flex">
        <div class="ml-3">
          <p class="text-sm leading-5 text-<%= flash_color(type) %>-700">
            <%= msg %>
          </p>
        </div>
        <div class="ml-auto pl-3">
          <div class="-mx-1.5 -my-1.5">
            <button class="inline-flex rounded-md p-1.5 text-<%= flash_color(type) %>-500 hover:bg-<%= flash_color(type) %>-100 focus:outline-none focus:bg-<%= flash_color(type) %>-100 transition ease-in-out duration-150" data-action="click->flash#hide">
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>