 <div class="flex flex-row items-center">
  <div class="w-1/3 flex flex-row justify-between text-2xl text-nord5 mx-4">
    <h1 class="self-center m-4"><%= req.owner_priority %></h1>
    <h1 class="line-clamp-2 w-3/4 ">
      <%= req.title %>
    </h1>
  </div>
  <%= link_to req do %>
    <div class="bg-nord5 text-nord0 justify-around flex flex-row p-1">
      <p class="line-clamp-3 m-1">
        <%= req.answer_for(:justification) %>
      </p>
      <p class="line-clamp-3 m-1">
        <%= req.answer_for(:impact) %>
      </p>
    </div>
  <% end %>
  <span class="text-nord5 text-2xl m-2">
    $<%= number_with_delimiter(req.req_total, 
                               :delimiter => ',') %>
  </span>
  <div class="border border-nord0 hover:border-nord5 px-1 m-1 text-nord0 hover:text-nord5">
    <% link_to 'Edit', edit_req_path(req)%>
  </div>

</div>

