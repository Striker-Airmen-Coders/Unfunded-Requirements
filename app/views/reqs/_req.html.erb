<%= link_to req do %>
  <div class="bg-nord5 px-1 text-nord0">
    <div class="w-full flex flex-wrap justify-center content-center align-middle text-2xl text-nord0 h-20 border-b-2 border-nord0 mb-2">
      <div class="text-center line-clamp-2"><%= req.title %></div>
    </div>
    <div class="flex px-2 justify-between pt-2">
      <div class="text-xl">
        <div class="text-nord0 text-opacity-25">
          <% if req.is_18SA_or_F6790 == "F6790" then %>
            <strong class="text-nord0">F6790</strong> / 18SA
          <% else %>
            F6790 / <strong class="text-nord0">18SA</strong>
          <% end %>
        </div>
        <div class="flex justify-between"><div>Group:</div> <%= req.group %></div>
        <div class="flex justify-between"><div>Unit:</div> <%= req.unit %></div>
      </div>
      <div class="text-xl">
         <div class="pl-4 text-right"><%= req.req_total %></div>
         <div class="pl-4 text-right border-b-2 border-nord0"><%= req.funding_secured %></div>
         <div class="pl-4 text-right"><%= req.req_total - req.funding_secured %></div>
       </div>
    </div>
    <div class="flex flex-row justify-around pt-2">
      <div><%= req.pec %></div>
      <div><%= req.rccc %></div>
      <div><%= req.eeic %></div>
      <div><%= req.method_of_purchase %></div>
    </div>
    <div class="line-clamp-9 pt-4">
      <%= req.pitch %>
      <pre>
              / _ \
            \_\(_)/_/
             _//"\\_  
              /   \
      </pre>
    </div>
  </div>
<% end %>
