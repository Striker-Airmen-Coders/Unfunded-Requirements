<%= link_to req do %>
  <div class="bg-nord5 px-1">
    <div class="w-full flex flex-wrap justify-center content-center align-middle text-2xl text-nord0 h-20 border-b-2 border-nord0 mb-2">
      <div class="text-center"><%= req.title %></div>
    </div>
    <div class="flex justify-between">
      <div class="bg-nord11 text-lg">
        <div><%= req.is_18SA_or_F6790 %></div>
        <div><%= req.group %></div>
        <div><%= req.unit %></div>
      </div>
      <div class="">
         <div class="pl-4 text-right"><%= req.req_total %></div>
         <div class="pl-4 text-right border-b-2 border-nord0"><%= req.funding_secured %></div>
         <div class="pl-4 text-right"><%= req.req_total - req.funding_secured %></div>
      </div>
    </div>
   <div class="flex flex-row justify-around">
     <div><%= req.pec %></div>
     <div><%= req.rccc %></div>
     <div><%= req.eeic %></div>
     <div><%= req.method_of_purchase %></div>
    </div>
    <div class="overflow-ellipsis">
      <%= req.pitch.truncate(500, separator: ' ') %>
      <pre>
              / _ \
            \_\(_)/_/
             _//"\\_  
              /   \
      </pre>
    </div>
  </div>

<% end %>
