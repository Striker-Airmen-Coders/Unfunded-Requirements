<header>
  <h1><i class="fas fa-chess-knight fa-2x"></i> Flagship Rails</h1>
  <button><i class="fas fa-mug-hot"></i> Button</button>
  <button><i class="fas fa-hotdog"></i> Button</button>
</header>

<div class="content">
  <div class="dialog">
    <h1>Example</h1>
    <form>
      <div class="col-span-6 sm:col-span-3">
        <label for="first_name">First name</label>
        <input type="text" name="first_name" id="first_name" autocomplete="given-name">
      </div>

      <div class="col-span-6 sm:col-span-3">
        <label for="last_name">Last name</label>
        <input type="text" name="last_name" id="last_name" autocomplete="family-name">
      </div>

      <div class="col-span-6 sm:col-span-4">
        <label for="email_address">Email address</label>
        <input type="text" name="email_address" id="email_address" autocomplete="email">
      </div>

      <div class="col-span-6 sm:col-span-3">
        <label for="country">Country / Region</label>
        <select id="country" name="country" autocomplete="country">
          <option>United States</option>
          <option>Canada</option>
          <option>Mexico</option>
        </select>
      </div>

      <div class="col-span-6">
        <label for="street_address">Street address</label>
        <input type="text" name="street_address" id="street_address" autocomplete="street-address">
      </div>

      <div class="col-span-6 sm:col-span-6 lg:col-span-2">
        <label for="city">City</label>
        <input type="text" name="city" id="city">
      </div>

      <div class="col-span-6 sm:col-span-3 lg:col-span-2">
        <label for="state">State / Province</label>
        <input type="text" name="state" id="state">
      </div>

      <div class="col-span-6 sm:col-span-3 lg:col-span-2">
        <label for="postal_code">ZIP / Postal</label>
        <input type="text" name="postal_code" id="postal_code" autocomplete="postal-code">
      </div>
      <div class="form-footer">
        <button type="submit">Example</button>
      </div>
    </form>
  </div>
</div>

